{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "src/**/*.astro"],
  "exclude": ["node_modules", "dist"]
}
